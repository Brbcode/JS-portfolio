{
  "name": "js-portfolio",
  "version": "1.0.0",
  "description": "Esta aplicación proporciona un buscador de libros digitales, muestra la información relacionada de dicho libro y permite descargar dicho libro.",
  "scripts": {
    "start": "run-p clean-dist watch-client watch-server",
    "build": "run-p build-client build-server",    
    "watch-client:darwin:linux": "NODE_ENV=development webpack --mode=development --config webpack.client.config.js --watch",
    "watch-client:win32": "NODE_ENV=development && webpack --mode=development --config webpack.client.config.js --watch",
    "watch-client:default": "echo 'Platfom not found'.",
    "watch-client": "run-script-os",
    "watch-server:darwin:linux": "NODE_ENV=development webpack --mode=development --config webpack.server.config.js --watch",
    "watch-server:win32": "NODE_ENV=development && webpack --mode=development --config webpack.server.config.js --watch",
    "watch-server:default": "echo 'Platfom not found'.",
    "watch-server": "run-script-os",
    "clean-dist": "rm -rf dist/*",
    "build-server:darwin:linux": "NODE_ENV=production webpack --mode=production --config webpack.server.config.js",
    "build-server:win32": "NODE_ENV=production && webpack --mode=production --config webpack.server.config.js",
    "build-server:default": "NODE_ENV=production webpack --mode=production --config webpack.server.config.js",
    "build-server": "run-script-os",
    "build-client:darwin:linux": "NODE_ENV=production webpack --mode=production --config webpack.client.config.js",
    "build-client:win32": "NODE_ENV=production && webpack --mode=production --config webpack.client.config.js",
    "build-client:default": "echo 'Platfom not found'.",
    "build-client": "run-script-os",
    "init": "nodemon ./dist/server/index.js"    
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Brbcode/JS-portfolio.git"
  },
  "keywords": [
    "react",
    "webpack"
  ],
  "author": "Bruno García Trípoli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Brbcode/JS-portfolio/issues"
  },
  "homepage": "https://github.com/Brbcode/JS-portfolio#readme",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "classnames": "^2.3.2",
    "express": "^4.18.2",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.4"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.7.2",
    "eslint": "^8.28.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "run-script-os": "^1.1.6",
    "sass": "^1.56.1",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.11.1",
    "webpack-node-externals": "^3.0.0"
  },
  "prettier": {
    "semi": true
  }
}
